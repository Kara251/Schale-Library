{
  "kind": "collectionType",
  "collectionName": "students",
  "info": {
    "singularName": "student",
    "pluralName": "students",
    "displayName": "学生",
    "description": "蔚蓝档案学生信息"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "school": {
      "type": "enumeration",
      "enum": [
        "abydos",
        "gehenna",
        "millennium",
        "trinity",
        "hyakkiyako",
        "shanhaijing",
        "redwinter",
        "valkyrie",
        "arius",
        "srt",
        "tokiwadai",
        "other"
      ]
    },
    "organization": {
      "type": "string"
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "bio": {
      "type": "richtext"
    },
    "works": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::work.work",
      "mappedBy": "students"
    }
  }
}